<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:rippleware="urn:import:com.rippleware.gwt.client.ui">

	<ui:style
		type="com.rippleware.gwt.client.ui.CoolList.CoolListCss">
		
			.coolList {
				margin: 0 5px 5px 5px;
			}
			
			.coolList ul {
				list-style: none;
				border: 1px solid #dedeaf;
				background: #D0E4F6;
				border-radius: 5px;
				-webkit-border-radius: 5px;
				-moz-border-radius: 5px;
				margin: 0;
				padding: 10px;
			}
			
			.coolList ul li {
				margin: 0;
				padding: 10px 55px 10px 0;
				position: relative;
				border-bottom: 1px solid #dedeaf;
				border-top: 1px solid #fff;
			}
			
			.coolList ul li:first-child {
				padding-top: 0;
				border-top: none;
			}
			
			.coolList ul li:last-child {
				padding-bottom: 0;
				border-bottom: none;
			}
			
			.coolList ul li h3 {
				margin-bottom: 5px;
			}
			
			.coolList ul li img {
				position: absolute;
				top: 10px;
				right: 10px;
			}
			
			.coolList ul li p.username {
				margin: 3px 0 0 0;
				font-style: italic;
				font-size: 12px;
			}
			
			.coolList ul li p.username a {
				color: #666;
				text-decoration: none;
			}
			
			.coolList ul li p.username a:hover,.CoolList ul li p.username a:focus {
				text-decoration: underline;
			}
		</ui:style>

	<g:ScrollPanel>
		<g:HTMLPanel addStyleNames="{style.coolList}">
			<rippleware:UnorderedList ui:field="ul"></rippleware:UnorderedList>
		</g:HTMLPanel>
	</g:ScrollPanel>
</ui:UiBinder> 