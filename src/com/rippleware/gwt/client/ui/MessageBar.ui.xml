<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:rw="urn:import:com.rippleware.gwt.client.ui">
	<ui:style type="com.rippleware.gwt.client.ui.MessageBar.MessageBarStyle">
		
		.messageBar { 
			width: 100%;
			position: absolute;
			display:none;
			z-index: 30000;
		}
		
		.messageBar ul{
			list-style:none;	
		}
		
		.error{
			background: #FAC3C3;
			border: 1px solid #FA2D2D;
			color: #FA2D2D;	
		}
		
		.info{
			background: #B4C5DE;
			border:1px solid #135ED2;
			color: #135ED2;
		}
		
	</ui:style>

	<g:HTMLPanel addStyleNames="{style.messageBar}">
		<rw:UnorderedList ui:field="list"></rw:UnorderedList>
	</g:HTMLPanel>

</ui:UiBinder> 